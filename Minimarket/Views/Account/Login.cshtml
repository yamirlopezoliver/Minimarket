@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Fondo general con un gradiente */
        body {
            background: linear-gradient(to right, #83a4d4, #b6fbff), url('your-background-image-url.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            color: #333;
        }

        /* Contenedor principal */
        .login-container {
            max-width: 400px;
            margin: 80px auto;
            padding: 30px;
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            animation: fadeIn 1s ease-in-out;
        }

            /* Títulos y textos */
            .login-container h2 {
                text-align: center;
                margin-bottom: 25px;
                color: #2c3e50;
                font-weight: 600;
            }

        label {
            color: #555;
            font-weight: bold;
        }

        /* Botón de envío */
        .btn-primary {
            background-color: #3498db;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2980b9;
            }

        /* Estilo del enlace */
        a {
            color: #3498db;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        /* Animaciones */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Iniciar Sesión</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Usuario</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Ingresa tu usuario" required />
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu contraseña" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Entrar</button>
        </form>
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger mt-3">
                @ViewData["ErrorMessage"]
            </div>
        }
        <div asp-validation-summary="All" class="text-danger mt-3"></div>
        <div class="mt-3 text-center">
            <p>¿No tienes una cuenta? <a asp-controller="Account" asp-action="Register">Regístrate aquí</a></p>
        </div>
    </div>
</body>
</html>


