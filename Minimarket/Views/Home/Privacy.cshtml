@section Scripts {
    <style>
        .founder-card {
            transition: transform 0.3s ease-in-out;
        }

            .founder-card:hover {
                transform: translateY(-10px);
            }

        .social-links a {
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .social-links a:hover {
                color: #0056b3 !important;
            }

        .badge {
            font-size: 0.9rem;
            font-weight: 500;
        }

        .card-img-top {
            height: 250px;
            object-fit: contain;
        }
    </style>
}
