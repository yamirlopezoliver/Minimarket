@{
    ViewData["Title"] = "MiniMarket Express - Tu tienda de confianza";
}

<!-- Hero Section with Carousel -->
<div id="mainCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1542838132-92c53300491e" class="d-block w-100" alt="Productos frescos" style="height: 400px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h2>Productos Frescos Diariamente</h2>
                <p>Encuentra la mejor calidad en frutas y verduras</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1607349913338-fca6f7fc42d0" class="d-block w-100" alt="Ofertas especiales" style="height: 400px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h2>Ofertas Especiales</h2>
                <p>¡Descuentos increíbles todos los días!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1578916171728-46686eac8d58" class="d-block w-100" alt="Productos destacados" style="height: 400px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h2>Productos Destacados</h2>
                <p>Lo mejor de nuestro catálogo seleccionado para ti</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>

<!-- Sección de Bienvenida -->
<div class="container mb-5">
    <div class="row text-center">
        <div class="col-12">
            <h1 class="display-4 mb-4">Bienvenidos a MiniMarket Express</h1>
            <p class="lead">Tu tienda de confianza para todas tus necesidades diarias</p>
        </div>
    </div>
</div>

<!-- Sección de Productos Destacados -->
<div class="container mb-5">
    <h2 class="text-center mb-4">Productos Destacados</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="badge bg-danger position-absolute" style="top: 0.5rem; right: 0.5rem">Oferta</div>
                <img src="https://images.unsplash.com/photo-1571771894821-ce9b6c11b08e" class="card-img-top" alt="Frutas frescas" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Frutas Frescas</h5>
                    <p class="card-text">Selección premium de frutas de temporada</p>
                    <p class="card-text"><small class="text-danger"><strong>20% de descuento</strong></small></p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="badge bg-success position-absolute" style="top: 0.5rem; right: 0.5rem">Nuevo</div>
                <img src="https://images.unsplash.com/photo-1534483509719-3feaee7c30da" class="card-img-top" alt="Lácteos" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Lácteos Frescos</h5>
                    <p class="card-text">La mejor selección de productos lácteos</p>
                    <p class="card-text"><small class="text-success"><strong>Recién llegados</strong></small></p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="badge bg-primary position-absolute" style="top: 0.5rem; right: 0.5rem">Popular</div>
                <img src="https://images.unsplash.com/photo-1608686207856-001b95cf60ca" class="card-img-top" alt="Snacks" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Snacks y Golosinas</h5>
                    <p class="card-text">Los mejores snacks para tus momentos especiales</p>
                    <p class="card-text"><small class="text-primary"><strong>¡Los más vendidos!</strong></small></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sección de Servicios -->
<div class="container-fluid bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Nuestros Servicios</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="p-3">
                    <i class="fas fa-truck fs-1 text-primary mb-3"></i>
                    <h4>Entrega a Domicilio</h4>
                    <p>Llevamos tus compras hasta la puerta de tu casa</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-3">
                    <i class="fas fa-clock fs-1 text-primary mb-3"></i>
                    <h4>Horario Extendido</h4>
                    <p>Abierto todos los días de 7:00 AM a 10:00 PM</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-3">
                    <i class="fas fa-tags fs-1 text-primary mb-3"></i>
                    <h4>Ofertas Semanales</h4>
                    <p>Descuentos especiales todas las semanas</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sección de Contacto -->
<div class="container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
            <h2 class="mb-4">¿Necesitas ayuda?</h2>
            <p class="mb-4">Estamos aquí para atenderte y resolver todas tus dudas</p>
            <button class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Privacy", "Home")'">Contáctanos</button>

        </div>
    </div>
</div>