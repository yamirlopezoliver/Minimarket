@model Minimarket.Models.User
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body {
            background: linear-gradient(to right, #c2e9fb, #a1c4fd);
            color: #fff;
            font-family: Arial, sans-serif;
        }

        h1, h3 {
            text-align: center;
            color: #fff;
            text-shadow: 1px 2px 4px rgba(0,0,0,0.3);
        }

        .details-card {
            background-color: rgba(255,255,255,0.95);
            border-radius: .75rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
            padding: 2rem;
        }

        .user-image {
            max-height: 250px;
            object-fit: cover;
            border-radius: 50%; /* Para hacerlo circular */
        }

        .alert-danger {
            padding: 1rem;
            text-align: center;
            font-size: 1.1rem;
            border-radius: .5rem;
        }

        dt, dd {
            color: #000;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-secondary:hover {
            background-color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container mt-5">

        <div class="mb-4 text-center">
            <h1>@ViewData["Title"]</h1>
            <h3>¿Está seguro de que desea eliminar este usuario?</h3>
        </div>

        <div class="card details-card">
            <div class="alert alert-danger">
                <strong>¡Advertencia!</strong> Esta acción eliminará el usuario de forma permanente.
            </div>

            <div class="row">
                @* <div class="col-md-4 text-center mb-4 mb-md-0">
                    <img src="@Url.Content("~/image/usuario-por-defecto.png")"
                         alt="Imagen de @Model.Nombre"
                         class="img-fluid user-image mx-auto d-block" style="max-width: 200px;" />
                </div> *@
                <div class="col-md-8 mx-auto">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Username)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefono)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Tipo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                        <dd class="col-sm-8">@Model.CreatedAt?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Role)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger me-md-2">
                        <i class="bi bi-trash3"></i> Eliminar Usuario
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </form>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>