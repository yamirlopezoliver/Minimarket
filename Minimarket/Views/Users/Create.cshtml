@model Minimarket.Models.User

@{
    ViewData["Title"] = "Crear Usuario";
    bool puedeSubirImagen = ViewBag.PuedeSubirImagen ?? false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(to right, #83a4d4, #b6fbff);
            font-family: Arial, sans-serif;
            color: #333;
        }

        .form-card {
            background-color: rgba(255,255,255,0.9);
            border-radius: .75rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
            animation: fadeIn 0.8s ease-in-out;
        }

        .user-image-placeholder {
            max-width: 150px;
            height: auto;
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="mb-3">
            <a href="javascript:history.back()" class="btn btn-outline-light" style="background-color: rgba(0,0,0,0.4); border-radius: 30px; padding: 10px 20px;">
                ← Volver al Listado
            </a>
        </div>
        <div class="card form-card">
            <div class="card-header bg-white border-0">
                <h1 class="h4 mb-0">@ViewData["Title"]</h1>
            </div>

            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        @* <div class="col-12 col-md-4 text-center mb-4 mb-md-0">
                            <img src="@Url.Content("~/image/usuario-por-defecto.png")"
                                 alt="Imagen de usuario"
                                 class="img-fluid rounded-circle mx-auto d-block mb-3 user-image-placeholder"
                                 id="previewImagen" style="@(!puedeSubirImagen ? "margin-bottom: 1.5rem;" : "")" />
                            @if (puedeSubirImagen)
                            {
                                <div class="mb-3">
                                    <label for="ImagenFile" class="form-label">Imagen de Usuario</label>
                                    <input type="file" class="form-control" id="ImagenFile" name="ImagenFile" accept="image/*" onchange="previewFile()" />
                                </div>
                            }
                            else
                            {
                                <div class="text-muted small text-center">La carga de imagen no está habilitada.</div>
                            }
                        </div> *@

                        <div class="col-12 col-md-8">
                            <div class="row g-3">
                                <div class="col-12 form-floating">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                    <label asp-for="Nombre">Nombre</label>
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-6 form-floating">
                                    <input asp-for="Username" class="form-control" placeholder="Nombre de Usuario" />
                                    <label asp-for="Username">Nombre de Usuario</label>
                                    <span asp-validation-for="Username" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-6 form-floating">
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="col-12 form-floating">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                                    <label asp-for="Password">Contraseña</label>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                                <div class="col-12 form-floating">
                                    <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                                    <label asp-for="Direccion">Dirección</label>
                                    <span asp-validation-for="Direccion" class="text-danger small"></span>
                                </div>

                                <div class="col-6 form-floating">
                                    <input asp-for="Telefono" type="tel" class="form-control" placeholder="Teléfono" />
                                    <label asp-for="Telefono">Teléfono</label>
                                    <span asp-validation-for="Telefono" class="text-danger small"></span>
                                </div>

                                <div class="col-6">
                                    <label asp-for="IdRol" class="form-label">Rol</label>
                                    <select asp-for="IdRol" class="form-select" asp-items="ViewBag.IdRol">
                                        <option selected>Selecciona un rol</option>
                                    </select>
                                </div>

                                <div class="col-12 form-floating">
                                    <input asp-for="CreatedAt" type="date" class="form-control" placeholder="Fecha de Creación" />
                                    <label asp-for="CreatedAt">Fecha de Creación</label>
                                    <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 d-flex flex-column flex-sm-row justify-content-between gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary flex-fill flex-sm-auto">
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary flex-fill flex-sm-auto">
                            Crear Usuario
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function previewFile() {
            const file = document.querySelector('#ImagenFile').files[0];
            const preview = document.querySelector('#previewImagen');

            if (file) {
                const reader = new FileReader();
                reader.onloadend = function() {
                    preview.src = reader.result;
                }
                reader.readAsDataURL(file);
            } else {
                preview.src = "@Url.Content("~/image/usuario-por-defecto.png")";
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const puedeSubir = @(puedeSubirImagen.ToString().ToLower());
            const preview = document.querySelector('#previewImagen');
            if (!puedeSubir && preview.src.endsWith('usuario-por-defecto.png')) {
                preview.style.marginBottom = '1.5rem';
            }
        });
    </script>
</body>
</html>