@model IEnumerable<Minimarket.Models.User>

<div class="card shadow-sm border-0">
    <div class="card-header text-dark d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Listado de Usuarios</h5>
        <a class="btn btn-primary text-white" asp-controller="Users" asp-action="Create">
            <i class="bi bi-person-plus-fill"></i> Nuevo Usuario
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-dark text-white">
                    <tr class="text-center">
                        <th><i class="bi bi-person-fill"></i> Nombre</th>
                        <th><i class="bi bi-at"></i> Username</th>
                        <th><i class="bi bi-envelope-fill"></i> Email</th>
                        <th><i class="bi bi-telephone-fill"></i> Teléfono</th>
                        <th><i class="bi bi-house-door-fill"></i> Dirección</th>
                        <th><i class="bi bi-tag-fill"></i> Tipo</th>
                        <th><i class="bi bi-key-fill"></i> Rol</th>
                        <th><i class="bi bi-calendar-plus-fill"></i> Creado</th>
                        <th><i class="bi bi-gear-fill"></i> Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Nombre</td>
                            <td>@item.Username</td>
                            <td>@item.Email</td>
                            <td>@item.Telefono</td>
                            <td>@item.Direccion</td>
                            <td>@item.Tipo</td>
                            <td>@item.Role?.Nombre</td>
                            <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-square"></i> Editar</a>
                                    <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"></i> Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
